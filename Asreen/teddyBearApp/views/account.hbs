<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content" style="background-color: rgba(211, 231, 224, 0.979);">

      <form action="/newItem" method="POST" class="w-75 m-auto" enctype="multipart/form-data">
        <label class="col-md-2 label-txt">Buy / Sale </label>
        <select type="text" value="sale" name="saleBuy" class="col col-md-8">
          <option value="sale">sale</option>
          <option value="buy">buy</option>
        </select>
        <div class="line-box">
          <div class="line"></div>
        </div>
        <div class="form-group">
          <label class="col col-md-2 label-txt" for="newItem">Item's Images</label>
          <input type="file" placeholder="choose some pictures" name='newItem' class="col col-md-8">
          <div class="line-box">
            <div class="line"></div>
          </div>
        </div>
        <label class="col col-md-2 label-txt">Category</label>
        <select id="category" value='Dolls' name="category" class="col col-md-8">
          <option value="Dolls">Dolls</option>
          <option value="Action figures">Action figures</option>
          <option value="Games">Games</option>
          <option value="Animals">Animals</option>
          <option value="Model building">Model building</option>
          <option value="Sound toys">Sound toys</option>
          <option value="Spinning toys">Spinning toys</option>
          <option value="Wooden toys">Wooden toys</option>
          <option value="Science and optical">Science and optical</option>
          <option value="Puzzle/assembly">Puzzle/assembly</option>
          <option value="Physical activity and dexterity">Physical activity and dexterity</option>
          <option value="Food-related toys">Food-related toys</option>
          <option value="Executive toys">Executive toys</option>
          <option value="Creative toys">Creative toys</option>
          <option value="Cars and radio controlled">Cars and radio controlled</option>
          <option value="other">other</option>
        </select>
        <div class="line-box">
          <div class="line"></div>
        </div>

        <div>
          <label class="col col-md-2 label-txt">Item name</label>
          <input type="text" id="proName" placeholder="enter the Item name" name='proName' class="col col-md-8">
        </div>
        <div class="line-box">
          <div class="line"></div>
        </div>
        <div>
          <label class="col col-md-2 label-txt">Item Status</label>
          <select name='ItemStatus' class="col col-md-8">
            <option value="New">New</option>
            <option value="Used-like new">Used-like new</option>
            <option value="Used-good">Used-good</option>
          </select>
        </div>
        <div class="line-box">
          <div class="line"></div>
        </div>
        <div>
          <label class="col col-md-2 label-txt">Price</label>
          <input type="text" id="price" placeholder="enter the price" name='price' class="col col-md-8">
        </div>
        <div class="line-box">
          <div class="line"></div>
        </div>
        <div>
          <label class="col col-md-2 label-txt">Description</label>
          <textarea type="text" id="description" placeholder="description" name='description' col="800"
            class="col col-md-8"></textarea>
        </div>
        <div class="line-box">
          <div class="line"></div>
        </div>
        <div class="m-auto">
          <button type="submit" class="btn btn-lg btn-info m-3">Submit</button>
        </div>
      </form>
    </div>

  </div>

</div>

<script>
  $(document).ready(function () {

    $('.input').focus(function () {
      $(this).parent().find(".label-txt").addClass('label-active');
    });

    $(".input").focusout(function () {
      if ($(this).val() == '') {
        $(this).parent().find(".label-txt").removeClass('label-active');
      };
    });
  });
</script>