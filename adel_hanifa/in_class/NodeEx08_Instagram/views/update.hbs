<main role="main">

  <div class="album py-5 bg-light">
    <div class="container">

      <h1 class="text-center">Edit Picture</h1>
      <div class="row">
{{#with data}}
        <div class="col-md-4 mx-auto">
          <div class="card mb-4 shadow-sm">

            <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="uploads/{{filename}}">

            <div class="card-body">
              <p class="card-text">
                <form action="/update-info" method="POST">
                  <p>Original name: <input class="float-right" type="text" name="originalname" value="{{split originalname}}" required></p>
                  <p>File type: <input class="float-right" type="text" name="mimetype" value="{{mimetype}}" disabled></p>
                  <p>File size: <input class="float-right" type="text" name="size" value="{{round size}}" disabled></p>
                  <p>Upload date: <input class="float-right" type="text" name="date" value="{{date}}" disabled></p>
                  <button type="submit" class="btn btn-sm btn-outline-success">Update info</button>
                </form>
              </p>

              {{!-- <div class="d-flex justify-content-between align-items-center"> --}}

                <div class="btn-group">
                  <form action="/save-update" method="POST" enctype="multipart/form-data">
                  <p><input type="file" name="myimg" accept="image/*" required></p>
                    <button type="submit" class="btn btn-sm btn-outline-success">
                      Upload image
                    </button>
                  </form>
                {{!-- </div> --}}

              </div>
            </div>

          </div>
        </div>

{{/with}}

      </div>

    </div>
  </div>

</main>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>