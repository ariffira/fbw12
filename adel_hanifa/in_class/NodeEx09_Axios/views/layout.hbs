    crossorigin="anonymous"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script>
    function getUser(email) {
      //alert(email)
      $.ajax({
        type: 'GET',
        url: '/search-user',
        data: {
          email
        },
        success: function (info) {
          console.log(info);
          if (info.email) {
            mainID.innerHTML = `
            <table class="table table-bordered table-dark">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">name</th>
                  <th scope="col">username</th>
                  <th scope="col">email</th>
                  <th scope="col">phone</th>
                  <th scope="col">website</th>
                  <th scope="col">company</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>${info.id}</td>
                  <td>${info.name}</td>
                  <td>${info.username}</td>
                  <td>${info.email}</td>
                  <td>${info.phone}</td>
                  <td>${info.website}</td>
                  <td>${info.company.name}</td>
                </tr>
              </tbody>
            </table>`;

      }
          else {
            mainID.innerHTML = 
            `<div class="alert alert-danger text-center my-4" role="alert">
              <h4 class="alert-heading">Welcom to our Web-Page</h4>
              <p>${info}</p>
              <hr>
              <p class="mb-0">Please enter user email in the form on the top again</p>
            </div>`
        }
        }
      });
    }
  </script>
</body>

